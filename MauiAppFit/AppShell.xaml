<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppFit.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppFit"
    Shell.FlyoutBehavior="Disabled"
    xmlns:Views="clr-namespace:MauiAppFit.Views"
    Title="MauiAppFit">

    <TabBar>
        <Tab Title="Nova Atividade" Icon="{OnPlatform Android=exercicio}" Route="CadastroAtividade">
            <ShellContent>
                <Views:CadastroAtividade Title="Cadastro de Atividade" />
            </ShellContent>
        </Tab>
        <Tab Title="Minhas Atividades" Icon="{OnPlatform Android=meus_exercicios}" Route="MinhasAtividades">
            <ShellContent>
                <Views:ListaAtividades Title="Minhas Atividades" />
            </ShellContent>
        </Tab>
        <Tab Title="Sobre" Icon="{OnPlatform Android=sobre}">
            <ShellContent>
                <Views:Sobre Title="Sobre o App" />
            </ShellContent>
        </Tab>
    </TabBar>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
